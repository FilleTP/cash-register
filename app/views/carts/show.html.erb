<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>
<table class="table">
  <thead>
    <th scope="col">Name</th>
    <th scope="col">Product Code</th>
    <th scope="col">Quantity</th>
    <th scope="col">Price</th>
  </thead>
  <tbody>
    <% current_cart.line_items.each_with_index do |line_item, index| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.product.product_code %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.price %> €</td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>Total Price:</td>
      <td><%= current_cart.total_price %> €</td>
    </tr>
  </tbody>
</table>
<div class=" my-5 text-end">
  <%= link_to "Pay", cart_path, class: "btn btn-primary fw-bold py-2 px-5" %>
</div>
